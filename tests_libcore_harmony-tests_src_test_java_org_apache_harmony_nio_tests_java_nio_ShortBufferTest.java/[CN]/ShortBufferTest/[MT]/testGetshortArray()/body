{
  short array[]=new short[1];
  buf.clear();
  for (int i=0; i < buf.capacity(); i++) {
    assertEquals(buf.position(),i);
    ShortBuffer ret=buf.get(array);
    assertEquals(array[0],buf.get(i));
    assertSame(ret,buf);
  }
  try {
    buf.get(array);
    fail("Should throw Exception");
  }
 catch (  BufferUnderflowException e) {
  }
}
