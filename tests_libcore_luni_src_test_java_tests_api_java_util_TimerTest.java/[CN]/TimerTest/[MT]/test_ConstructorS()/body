{
  Timer t=null;
  try {
    t=new Timer("test_ConstructorSThread");
    TimerTestTask testTask=new TimerTestTask();
    t.schedule(testTask,200);
    awaitRun(testTask);
    t.cancel();
  }
  finally {
    if (t != null)     t.cancel();
  }
  try {
    new Timer(null);
    fail();
  }
 catch (  NullPointerException expected) {
  }
}
