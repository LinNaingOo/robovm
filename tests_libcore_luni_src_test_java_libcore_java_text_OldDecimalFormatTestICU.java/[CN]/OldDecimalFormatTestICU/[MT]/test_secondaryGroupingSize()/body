{
  format.applyPattern("#,##,###,####");
  assertEquals("123,456,7890",format.format(1234567890));
  assertEquals(1234567890,format.parse("123,456,7890").intValue());
  format.applyPattern("##,#,###,####");
  assertEquals("123,456,7890",format.format(1234567890));
  assertEquals(1234567890,format.parse("123,456,7890").intValue());
  format.applyPattern("###,###,####");
  assertEquals("123,456,7890",format.format(1234567890));
  assertEquals(1234567890,format.parse("123,456,7890").intValue());
  format.applyPattern("###,##,###.#");
  assertEquals("12,34,567.8",format.format(1234567.8));
  format.applyPattern("##,#,##,###.#");
  assertEquals("12,34,567.8",format.format(1234567.8));
  format.applyPattern("#,##,##,###.#");
  assertEquals("12,34,567.8",format.format(1234567.8));
}
