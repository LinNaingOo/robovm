{
  if (obj instanceof XPath)   return XPath.class;
  Class cl=obj.getClass();
  if (cl == Double.class) {
    cl=double.class;
  }
  if (cl == Float.class) {
    cl=float.class;
  }
 else   if (cl == Boolean.class) {
    cl=boolean.class;
  }
 else   if (cl == Byte.class) {
    cl=byte.class;
  }
 else   if (cl == Character.class) {
    cl=char.class;
  }
 else   if (cl == Short.class) {
    cl=short.class;
  }
 else   if (cl == Integer.class) {
    cl=int.class;
  }
 else   if (cl == Long.class) {
    cl=long.class;
  }
  return cl;
}
