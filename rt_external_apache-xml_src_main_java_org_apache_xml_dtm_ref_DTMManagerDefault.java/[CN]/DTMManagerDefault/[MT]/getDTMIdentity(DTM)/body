{
  if (dtm instanceof DTMDefaultBase) {
    DTMDefaultBase dtmdb=(DTMDefaultBase)dtm;
    if (dtmdb.getManager() == this)     return dtmdb.getDTMIDs().elementAt(0);
 else     return -1;
  }
  int n=m_dtms.length;
  for (int i=0; i < n; i++) {
    DTM tdtm=m_dtms[i];
    if (tdtm == dtm && m_dtm_offsets[i] == 0)     return i << IDENT_DTM_NODE_BITS;
  }
  return -1;
}
