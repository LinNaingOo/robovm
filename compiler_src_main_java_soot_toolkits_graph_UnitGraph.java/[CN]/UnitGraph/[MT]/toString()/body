{
  Iterator<Unit> it=unitChain.iterator();
  StringBuffer buf=new StringBuffer();
  while (it.hasNext()) {
    Unit u=(Unit)it.next();
    buf.append("// preds: " + getPredsOf(u) + "\n");
    buf.append(u.toString() + '\n');
    buf.append("// succs " + getSuccsOf(u) + "\n");
  }
  return buf.toString();
}
