{
  String gccPath="gcc";
  if (gccBin != null) {
    gccPath=gccBin.getAbsolutePath();
  }
  List<String> opts=new ArrayList<String>(gccOpts);
  if (debug) {
    opts.add("-g");
  }
  if (os == OS.darwin) {
    opts.add("-arch");
    opts.add(arch.toString());
  }
  opts.addAll(Arrays.asList(options));
  outFile.getParentFile().mkdirs();
  exec(gccPath,"-c","-o",outFile,opts,inFile);
}
