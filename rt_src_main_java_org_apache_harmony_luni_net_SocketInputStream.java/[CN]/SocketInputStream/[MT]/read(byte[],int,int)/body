{
  if (null == buffer) {
    throw new IOException(Messages.getString("luni.11"));
  }
  if (0 == count) {
    return 0;
  }
  if (0 > offset || offset >= buffer.length) {
    throw new ArrayIndexOutOfBoundsException(Messages.getString("luni.12",offset));
  }
  if (0 > count || offset + count > buffer.length) {
    throw new ArrayIndexOutOfBoundsException(Messages.getString("luni.13"));
  }
  return socket.read(buffer,offset,count);
}
