{
  buf.clear();
  for (int i=0; i < buf.capacity(); i++) {
    assertEquals(buf.position(),0);
    IntBuffer ret=buf.put(i,(int)i);
    assertEquals(buf.get(i),(int)i);
    assertSame(ret,buf);
  }
  try {
    buf.put(-1,0);
    fail("Should throw Exception");
  }
 catch (  IndexOutOfBoundsException e) {
  }
  try {
    buf.put(buf.limit(),0);
    fail("Should throw Exception");
  }
 catch (  IndexOutOfBoundsException e) {
  }
}
