{
  boolean isInEncoding;
  try {
    char cArray[]=new char[1];
    cArray[0]=ch;
    String s=new String(cArray);
    byte[] bArray=s.getBytes(encoding);
    isInEncoding=inEncoding(ch,bArray);
  }
 catch (  Exception e) {
    isInEncoding=false;
    if (encoding == null)     isInEncoding=true;
  }
  return isInEncoding;
}
