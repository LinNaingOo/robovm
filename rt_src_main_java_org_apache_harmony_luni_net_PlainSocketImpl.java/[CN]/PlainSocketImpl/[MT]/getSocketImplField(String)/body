{
  return AccessController.doPrivileged(new PrivilegedAction<Field>(){
    public Field run(){
      Field field=null;
      try {
        field=SocketImpl.class.getDeclaredField(fieldName);
        field.setAccessible(true);
      }
 catch (      NoSuchFieldException e) {
        throw new Error(e);
      }
      return field;
    }
  }
);
}
