{
  if (tag == ASN1Constants.TAG_BITSTRING) {
    if (length == 0) {
      throw new ASN1Exception(Messages.getString("security.114",tagOffset));
    }
    readContent();
    if (buffer[contentOffset] > 7) {
      throw new ASN1Exception(Messages.getString("security.115",contentOffset));
    }
    if (length == 1 && buffer[contentOffset] != 0) {
      throw new ASN1Exception(Messages.getString("security.116",contentOffset));
    }
  }
 else   if (tag == ASN1Constants.TAG_C_BITSTRING) {
    throw new ASN1Exception(Messages.getString("security.117"));
  }
 else {
    throw new ASN1Exception(Messages.getString("security.118",tagOffset,Integer.toHexString(tag)));
  }
}
