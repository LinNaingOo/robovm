{
  if (str == null) {
    return "NULL";
  }
  int i, single=0, dbl=0;
  for (i=0; i < str.length(); i++) {
    if (str.charAt(i) == '\'') {
      single++;
    }
 else     if (str.charAt(i) == '"') {
      dbl++;
    }
  }
  if (dbl == 0) {
    return "\"" + str + "\"";
  }
  StringBuffer sb=new StringBuffer("\"");
  for (i=0; i < str.length(); i++) {
    char c=str.charAt(i);
    if (c == '"') {
      sb.append("\"\"");
    }
 else {
      sb.append(c);
    }
  }
  return sb.toString();
}
