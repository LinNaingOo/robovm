{
  if (str == null) {
    return "NULL";
  }
  StringBuffer sb=new StringBuffer();
  for (int i=0; i < str.length(); i++) {
    char c=str.charAt(i);
    if (c == '<') {
      sb.append("&lt;");
    }
 else     if (c == '>') {
      sb.append("&gt;");
    }
 else     if (c == '&') {
      sb.append("&amp;");
    }
 else {
      int x=c;
      if (x < 32 || x > 127) {
        sb.append("&#" + x + ";");
      }
 else {
        sb.append(c);
      }
    }
  }
  return sb.toString();
}
