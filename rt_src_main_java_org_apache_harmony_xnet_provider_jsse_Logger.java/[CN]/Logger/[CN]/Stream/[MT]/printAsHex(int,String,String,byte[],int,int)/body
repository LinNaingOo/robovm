{
  String line="";
  for (int i=0; i < len; i++) {
    String tail=Integer.toHexString(0x00ff & data[i + offset]).toUpperCase();
    if (tail.length() == 1) {
      tail="0" + tail;
    }
    line+=prefix + tail + delimiter;
    if (((i + 1) % perLine) == 0) {
      super.println(line);
      line="";
    }
  }
  super.println(line);
}
