{
  int max=3;
  int i=1;
  int first;
  int res;
  int length=pattern.length - 2;
switch (first=Character.digit(pattern[index],8)) {
case -1:
    throw new PatternSyntaxException(Messages.getString("regex.19"),this.toString(),index);
default :
{
    if (first > 3)     max--;
    nextIndex();
    res=first;
  }
}
while (i < max && index < length && (first=Character.digit(pattern[index],8)) >= 0) {
res=res * 8 + first;
nextIndex();
i++;
}
return res;
}
