{
  int length=pattern.length - 2;
  index++;
  do {
    while (index < length && Character.isWhitespace(pattern[index]))     index++;
    if (index < length && pattern[index] == '#') {
      index++;
      while (index < length && !isLineSeparator(pattern[index]))       index++;
    }
 else     return index;
  }
 while (true);
}
