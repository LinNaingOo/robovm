{
  StringBuilder st=new StringBuilder(max);
  int length=pattern.length - 2;
  int i;
  for (i=0; i < max && index < length; i++) {
    st.append((char)pattern[nextIndex()]);
  }
  if (i == max) {
    try {
      return Integer.parseInt(st.toString(),16);
    }
 catch (    NumberFormatException nfe) {
    }
  }
  throw new PatternSyntaxException(Messages.getString("regex.18",radixName),this.toString(),index);
}
