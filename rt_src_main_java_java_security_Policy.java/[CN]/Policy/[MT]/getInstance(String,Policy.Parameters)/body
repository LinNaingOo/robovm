{
  checkSecurityPermission(new SecurityPermission(CREATE_POLICY + type));
  if (type == null) {
    throw new NullPointerException();
  }
  try {
synchronized (engine) {
      engine.getInstance(type,params);
      return new PolicyDelegate((PolicySpi)engine.spi,engine.provider,type,params);
    }
  }
 catch (  NoSuchAlgorithmException e) {
    if (e.getCause() == null) {
      throw e;
    }
    throw new IllegalArgumentException(Messages.getString("security.1A7",params.toString()));
  }
}
