{
  if ((type != IFileSystem.SHARED_LOCK_TYPE) && (type != IFileSystem.EXCLUSIVE_LOCK_TYPE)) {
    throw new IllegalArgumentException("Illegal lock type requested.");
  }
  if (start < 0) {
    throw new IllegalArgumentException("Lock start position must be non-negative");
  }
  if (length < 0) {
    throw new IllegalArgumentException("Lock length must be non-negative");
  }
}
