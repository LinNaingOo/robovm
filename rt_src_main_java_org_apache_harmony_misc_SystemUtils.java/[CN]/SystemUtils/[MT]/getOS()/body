{
  if (os == 0) {
    String osname=System.getProperty("os.name").substring(0,3);
    if (osname.compareToIgnoreCase("win") == 0) {
      os=OS_WINDOWS;
    }
 else {
      if (osname.compareToIgnoreCase("lin") == 0) {
        os=OS_LINUX;
      }
 else {
        if (osname.compareToIgnoreCase("fre") == 0) {
          os=OS_FREEBSD;
        }
 else {
          os=OS_UNKNOWN;
        }
      }
    }
  }
  return os;
}
