{
  if (string == null) {
    StringBuilder result=new StringBuilder();
    if (scheme != null) {
      result.append(scheme);
      result.append(':');
    }
    if (opaque) {
      result.append(schemespecificpart);
    }
 else {
      if (authority != null) {
        result.append("//");
        result.append(authority);
      }
      if (path != null) {
        result.append(path);
      }
      if (query != null) {
        result.append('?');
        result.append(query);
      }
    }
    if (fragment != null) {
      result.append('#');
      result.append(fragment);
    }
    string=result.toString();
  }
  return string;
}
