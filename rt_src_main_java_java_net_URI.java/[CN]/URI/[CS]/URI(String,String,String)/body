{
  StringBuilder uri=new StringBuilder();
  if (scheme != null) {
    uri.append(scheme);
    uri.append(':');
  }
  if (ssp != null) {
    uri.append(quoteComponent(ssp,allLegal));
  }
  if (frag != null) {
    uri.append('#');
    uri.append(quoteComponent(frag,allLegal));
  }
  new Helper().parseURI(uri.toString(),false);
}
