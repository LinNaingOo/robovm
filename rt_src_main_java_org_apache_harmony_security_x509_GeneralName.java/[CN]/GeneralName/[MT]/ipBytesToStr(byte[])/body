{
  String result="";
  if (ip.length < 9) {
    for (int i=0; i < ip.length; i++) {
      result+=Integer.toString(ip[i] & 0xff);
      if (i != ip.length - 1) {
        result+=(i == 3) ? "/" : ".";
      }
    }
  }
 else {
    for (int i=0; i < ip.length; i++) {
      result+=Integer.toHexString(0x00ff & ip[i]);
      if ((i % 2 != 0) && (i != ip.length - 1)) {
        result+=(i == 15) ? "/" : ":";
      }
    }
  }
  return result;
}
