{
  super(in);
  if (in == null) {
    throw new NullPointerException("in == null");
  }
 else   if (deflater == null) {
    throw new NullPointerException("deflater == null");
  }
  if (bufferSize <= 0) {
    throw new IllegalArgumentException("bufferSize <= 0: " + bufferSize);
  }
  this.def=deflater;
  this.buf=new byte[bufferSize];
}
