{
  if (Options.v().verbose())   G.v().out.println("[" + body.getMethod().getName() + "]     Unrolling Loop Conditions...");
  visitingSuccs=new HashSet<Block>();
  visitedBlocks=new HashSet<Block>();
  this.body=body;
  this.maxSize=PhaseOptions.getInt(options,"maxSize");
  BlockGraph bg=new BriefBlockGraph(body);
  Iterator headIter=bg.getHeads().iterator();
  while (headIter.hasNext())   unrollConditions((Block)headIter.next());
  if (Options.v().verbose())   G.v().out.println("[" + body.getMethod().getName() + "]     Unrolling Loop Conditions done.");
}
