{
  if (sc2 != 0)   pop(sc2);
  Type value=pop(elemType.storageClass);
  Type index=pop(SC_INT);
  Type array=pop(SC_ADDR);
  Type elem=elemType;
  if (!array.isAnonymousArray()) {
    if (array.tag != T_ARRAY)     throw new verify.VerificationException("non-array operand to array store insn");
    elem=((ArrayType)array).elementType;
  }
  if (elemType.storageClass == SC_ADDR)   elem.checkAssignmentFrom(value);
 else   if (elem != elemType)   throw new verify.VerificationException("" + array + " operand to "+ elemType+ "[] store operation");
}
