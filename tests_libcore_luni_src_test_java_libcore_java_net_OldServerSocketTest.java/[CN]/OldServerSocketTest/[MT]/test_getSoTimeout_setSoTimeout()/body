{
  ServerSocket s=new ServerSocket();
  s.setSoTimeout(1500);
  int ms=s.getSoTimeout();
  if (ms < 1500 - 10 || ms > 1500 + 10) {
    fail("suspicious timeout: " + ms);
  }
  s.close();
  try {
    s.getSoTimeout();
    fail("SocketException was not thrown.");
  }
 catch (  SocketException expected) {
  }
  try {
    s.setSoTimeout(1000);
    fail("SocketException was not thrown.");
  }
 catch (  SocketException expected) {
  }
}
