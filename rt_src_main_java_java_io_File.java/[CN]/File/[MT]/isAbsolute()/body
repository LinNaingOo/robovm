{
  if (File.separatorChar == '\\') {
    if (path.length() > 1 && path.charAt(0) == File.separatorChar && path.charAt(1) == File.separatorChar) {
      return true;
    }
    if (path.length() > 2) {
      if (Character.isLetter(path.charAt(0)) && path.charAt(1) == ':' && (path.charAt(2) == '/' || path.charAt(2) == '\\')) {
        return true;
      }
    }
    return false;
  }
  return (path.length() > 0 && path.charAt(0) == File.separatorChar);
}
