{
  File f=getAbsoluteFile();
  String name=f.getPath();
  if (f.isDirectory() && name.charAt(name.length() - 1) != separatorChar) {
    name=new StringBuilder(name.length() + 1).append(name).append('/').toString();
  }
  if (separatorChar != '/') {
    name=name.replace(separatorChar,'/');
  }
  return name;
}
