{
  if (!isValidCodePoint(codePoint)) {
    throw new IllegalArgumentException();
  }
  int low=0;
  int mid=-1;
  int high=BLOCKS.length - 1;
  while (low <= high) {
    mid=(low + high) >>> 1;
    UnicodeBlock block=BLOCKS[mid];
    if (codePoint > block.end) {
      low=mid + 1;
    }
 else     if (codePoint >= block.start && codePoint <= block.end) {
      return block;
    }
 else {
      high=mid - 1;
    }
  }
  return null;
}
