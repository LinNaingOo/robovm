{
  lnr=new LineNumberReader(new StringReader(text));
  char[] c=new char[100];
  lnr.read(c,0,4);
  assertTrue("Test 1: Read returned incorrect characters.","0\n1\n".equals(new String(c,0,4)));
  assertEquals("Test 2: Read failed to inc lineNumber",2,lnr.getLineNumber());
  lnr.close();
  try {
    lnr.read(c,0,4);
    fail("Test 3: IOException expected.");
  }
 catch (  IOException e) {
  }
}
