{
  lnr=new LineNumberReader(new StringReader(text));
  char[] c=new char[10];
  try {
    lnr.read(c,-1,1);
    fail("IndexOutOfBoundsException expected.");
  }
 catch (  IndexOutOfBoundsException e) {
  }
  try {
    lnr.read(c,0,-1);
    fail("IndexOutOfBoundsException expected.");
  }
 catch (  IndexOutOfBoundsException e) {
  }
  try {
    lnr.read(c,10,1);
    fail("IndexOutOfBoundsException expected.");
  }
 catch (  IndexOutOfBoundsException e) {
  }
}
