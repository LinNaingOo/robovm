{
  if (p_fragment == null) {
    m_fragment=null;
  }
 else   if (!isGenericURI()) {
    throw new MalformedURIException(XMLMessages.createXMLMessage(XMLErrorResources.ER_FRAG_FOR_GENERIC_URI,null));
  }
 else   if (getPath() == null) {
    throw new MalformedURIException(XMLMessages.createXMLMessage(XMLErrorResources.ER_FRAG_WHEN_PATH_NULL,null));
  }
 else   if (!isURIString(p_fragment)) {
    throw new MalformedURIException(XMLMessages.createXMLMessage(XMLErrorResources.ER_FRAG_INVALID_CHAR,null));
  }
 else {
    m_fragment=p_fragment;
  }
}
