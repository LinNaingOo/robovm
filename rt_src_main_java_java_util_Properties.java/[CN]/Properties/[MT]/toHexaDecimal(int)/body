{
  char[] hexChars={'\\','u','0','0','0','0'};
  int hexChar, index=hexChars.length, copyOfCh=ch;
  do {
    hexChar=copyOfCh & 15;
    if (hexChar > 9) {
      hexChar=hexChar - 10 + 'A';
    }
 else {
      hexChar+='0';
    }
    hexChars[--index]=(char)hexChar;
  }
 while ((copyOfCh>>>=4) != 0);
  return hexChars;
}
