{
  if (closed) {
    throw new IllegalStateException(Messages.getString("archive.35"));
  }
  if (manifest != null) {
    return manifest;
  }
  try {
    InputStream is=super.getInputStream(manifestEntry);
    if (verifier != null) {
      verifier.addMetaEntry(manifestEntry.getName(),InputStreamHelper.readFullyAndClose(is));
      is=super.getInputStream(manifestEntry);
    }
    try {
      manifest=new Manifest(is,verifier != null);
    }
  finally {
      is.close();
    }
    manifestEntry=null;
  }
 catch (  NullPointerException e) {
    manifestEntry=null;
  }
  return manifest;
}
