{
  final Element root=doc.getDocumentElement();
  final NodeList children=root.getChildNodes();
  Node childNode=null;
  for (int i=0; i < children.getLength(); i++) {
    if (children.item(i).getNodeType() == Node.TEXT_NODE) {
      if (children.item(i).getTextContent().trim().length() > 0)       throw new PropertyListException("Unexpected text content in root PList node.");
    }
 else {
      if (childNode != null)       throw new PropertyListException("The property list appears to contain more than one root NSObject.");
      childNode=children.item(i);
    }
  }
  return parseNode(childNode);
}
