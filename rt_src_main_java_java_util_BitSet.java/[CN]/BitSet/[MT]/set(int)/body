{
  if (pos < 0) {
    throw new IndexOutOfBoundsException(Messages.getString("luni.37"));
  }
  int len=(pos >> OFFSET) + 1;
  if (len > bits.length) {
    growLength(len);
  }
  bits[len - 1]|=TWO_N_ARRAY[pos & RIGHT_BITS];
  if (len > actualArrayLength) {
    actualArrayLength=len;
    isLengthActual=true;
  }
  needClear();
}
