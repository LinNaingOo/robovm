{
  ServerSocket gotSocket=serverChannel.socket();
  serverChannel.configureBlocking(true);
  try {
    gotSocket.accept();
    fail("Should throw an IllegalBlockingModeException");
  }
 catch (  IllegalBlockingModeException e) {
  }
  serverChannel.close();
  try {
    gotSocket.accept();
    fail("Should throw an IllegalBlockingModeException");
  }
 catch (  IllegalBlockingModeException e) {
  }
}
