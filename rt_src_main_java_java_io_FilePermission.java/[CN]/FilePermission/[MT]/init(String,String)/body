{
  if (pathActions == null || pathActions.equals("")) {
    throw new IllegalArgumentException(Messages.getString("luni.B7"));
  }
  this.actions=toCanonicalActionString(pathActions);
  if (path == null) {
    throw new NullPointerException(Messages.getString("luni.B8"));
  }
  if (path.equals("<<ALL FILES>>")) {
    includeAll=true;
  }
 else {
    canonPath=AccessController.doPrivileged(new PrivilegedAction<String>(){
      public String run(){
        try {
          return new File(path).getCanonicalPath();
        }
 catch (        IOException e) {
          return path;
        }
      }
    }
);
    if (path.equals("*") || path.endsWith(File.separator + "*")) {
      allDir=true;
    }
    if (path.equals("-") || path.endsWith(File.separator + "-")) {
      allSubdir=true;
    }
  }
}
