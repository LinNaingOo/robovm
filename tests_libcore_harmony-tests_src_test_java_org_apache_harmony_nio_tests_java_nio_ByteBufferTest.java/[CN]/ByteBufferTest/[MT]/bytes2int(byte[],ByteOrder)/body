{
  int nbytes=4, bigHead, step;
  if (order == ByteOrder.BIG_ENDIAN) {
    bigHead=0;
    step=1;
  }
 else {
    bigHead=nbytes - 1;
    step=-1;
  }
  int result=0;
  int p=bigHead;
  for (int i=0; i < nbytes; i++) {
    result=result << 8;
    result=result | (bytes[p] & 0xff);
    p+=step;
  }
  return result;
}
