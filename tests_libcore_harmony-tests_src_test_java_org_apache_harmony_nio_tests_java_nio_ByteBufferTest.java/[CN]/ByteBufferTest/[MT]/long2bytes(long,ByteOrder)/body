{
  int nbytes=8, smallHead, step;
  if (order == ByteOrder.BIG_ENDIAN) {
    smallHead=nbytes - 1;
    step=-1;
  }
 else {
    smallHead=0;
    step=1;
  }
  byte bytes[]=new byte[nbytes];
  int p=smallHead;
  for (int i=0; i < nbytes; i++) {
    bytes[p]=(byte)(value & 0xff);
    value=value >> 8;
    p+=step;
  }
  return bytes;
}
