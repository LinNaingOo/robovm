{
  List succs=(List)nodeToSuccs.get(node).clone();
  for (Iterator succsIt=succs.iterator(); succsIt.hasNext(); )   removeEdge(node,succsIt.next());
  nodeToSuccs.remove(node);
  List preds=(List)nodeToPreds.get(node).clone();
  for (Iterator predsIt=preds.iterator(); predsIt.hasNext(); )   removeEdge(predsIt.next(),node);
  nodeToPreds.remove(node);
  if (heads.contains(node))   heads.remove(node);
  if (tails.contains(node))   tails.remove(node);
}
