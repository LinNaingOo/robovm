{
  int i;
  bc[index++]=code;
  for (i=0; i < pad; i++)   bc[index++]=0;
  if (default_inst != null)   index=intToBytes(default_inst.label - label,bc,index);
 else   index=intToBytes(default_offset,bc,index);
  index=intToBytes(low,bc,index);
  index=intToBytes(high,bc,index);
  for (i=0; i <= high - low; i++) {
    if (jump_insts[i] != null)     index=intToBytes((jump_insts[i]).label - label,bc,index);
 else     index=intToBytes(jump_offsets[i],bc,index);
  }
  return index;
}
