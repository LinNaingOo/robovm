{
  if ((declaringClass != null) && declaringClass.isPhantomClass())   throw new RuntimeException("cannot set active body for phantom class! " + this);
  if (!isConcrete())   throw new RuntimeException("cannot set body for non-concrete method! " + this);
  if (body != null && body.getMethod() != this)   body.setMethod(this);
  activeBody=body;
}
