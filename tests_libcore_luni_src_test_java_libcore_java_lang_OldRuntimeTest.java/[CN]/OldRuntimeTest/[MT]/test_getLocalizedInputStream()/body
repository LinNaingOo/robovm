{
  String simpleString="Heart \u2f3c";
  byte[] expected=simpleString.getBytes("UTF-8");
  byte[] returned=new byte[expected.length];
  ByteArrayInputStream bais=new ByteArrayInputStream(simpleString.getBytes("UTF-8"));
  InputStream lcIn=Runtime.getRuntime().getLocalizedInputStream(bais);
  lcIn.read(returned);
  assertTrue("wrong result for String: " + simpleString,Arrays.equals(expected,returned));
}
