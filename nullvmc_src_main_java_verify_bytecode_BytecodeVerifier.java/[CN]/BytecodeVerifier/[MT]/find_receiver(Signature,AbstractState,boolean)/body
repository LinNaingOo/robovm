{
  int nargs=sig.numberArgs();
  int offset=0;
  for (int arg=nargs - 1; arg >= 0; arg--) {
    Type targ=sig.declaredArgument(arg);
    if (targ.tag == T_LONG || targ.tag == T_DOUBLE)     offset+=2;
 else     offset+=1;
  }
  if (new_object)   return state.peek(offset + 1,T_NEW);
 else   return state.peek(offset + 1,SC_ADDR);
}
