{
switch (classfile.pool.get_tag(index)) {
case CONSTANT_String:
    return ctx.STRING;
case CONSTANT_Integer:
  return ctx.INT;
case CONSTANT_Float:
return ctx.FLOAT;
case CONSTANT_Double:
return ctx.DOUBLE;
case CONSTANT_Long:
return ctx.LONG;
case CONSTANT_Class:
return ctx.CLASS;
default :
throw new verify.VerificationException("did not find a constant value at index " + index + " in constant pool");
}
}
