{
  if (version != null) {
    return version;
  }
  InputStream is=null;
  try {
    is=Version.class.getResourceAsStream("/version.properties");
    Properties props=new Properties();
    props.load(is);
    version=props.getProperty("version");
    return version;
  }
 catch (  IOException e) {
    throw new RuntimeException(e);
  }
 finally {
    IOUtils.closeQuietly(is);
  }
}
