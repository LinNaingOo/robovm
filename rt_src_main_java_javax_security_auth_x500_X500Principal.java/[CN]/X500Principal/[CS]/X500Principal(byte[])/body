{
  super();
  if (name == null) {
    throw new IllegalArgumentException(Messages.getString("auth.00"));
  }
  try {
    dn=(Name)Name.ASN1.decode(name);
  }
 catch (  IOException e) {
    IllegalArgumentException iae=new IllegalArgumentException(Messages.getString("auth.2B"));
    iae.initCause(e);
    throw iae;
  }
}
