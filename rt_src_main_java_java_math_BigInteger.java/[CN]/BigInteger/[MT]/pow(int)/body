{
  if (exp < 0) {
    throw new ArithmeticException(Messages.getString("math.16"));
  }
  if (exp == 0) {
    return ONE;
  }
 else   if (exp == 1 || equals(ONE) || equals(ZERO)) {
    return this;
  }
  if (!testBit(0)) {
    int x=1;
    while (!testBit(x)) {
      x++;
    }
    return getPowerOfTwo(x * exp).multiply(this.shiftRight(x).pow(exp));
  }
  return Multiplication.pow(this,exp);
}
