{
  if (numBits < 0) {
    throw new IllegalArgumentException(Messages.getString("math.1B"));
  }
  if (numBits == 0) {
    sign=0;
    numberLength=1;
    digits=new int[]{0};
  }
 else {
    sign=1;
    numberLength=(numBits + 31) >> 5;
    digits=new int[numberLength];
    for (int i=0; i < numberLength; i++) {
      digits[i]=rnd.nextInt();
    }
    digits[numberLength - 1]>>>=(-numBits) & 31;
    cutOffLeadingZeroes();
  }
}
