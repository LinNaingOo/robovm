{
  super(out);
  if (out == null) {
    throw new NullPointerException("out == null");
  }
 else   if (inf == null) {
    throw new NullPointerException("inf == null");
  }
  if (bufferSize <= 0) {
    throw new IllegalArgumentException("bufferSize <= 0: " + bufferSize);
  }
  this.inf=inf;
  this.buf=new byte[bufferSize];
}
