{
  int index=proxy.indexOf(':');
  if (index == -1) {
    proxyName=proxy;
    hostPort=defaultPort;
  }
 else {
    proxyName=proxy.substring(0,index);
    String port=proxy.substring(index + 1);
    try {
      hostPort=Integer.parseInt(port);
    }
 catch (    NumberFormatException e) {
      throw new IllegalArgumentException(Messages.getString("luni.30",port));
    }
    if (hostPort < 0 || hostPort > 65535) {
      throw new IllegalArgumentException(Messages.getString("luni.31"));
    }
  }
}
