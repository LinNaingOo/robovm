{
  leftBox=new LinkedVariableBox(variable);
  rightBox=new LinkedRValueBox(rvalue);
  ((LinkedVariableBox)leftBox).setOtherBox(rightBox);
  ((LinkedRValueBox)rightBox).setOtherBox(leftBox);
  if (!leftBox.canContainValue(variable) || !rightBox.canContainValue(rvalue))   throw new RuntimeException("Illegal assignment statement.  Make sure that either left side or right hand side has a local or constant.");
  defBoxes=new SingletonList(leftBox);
}
