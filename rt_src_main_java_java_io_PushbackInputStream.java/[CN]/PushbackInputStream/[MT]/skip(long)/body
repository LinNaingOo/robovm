{
  if (in == null) {
    throw new IOException(Messages.getString("luni.24"));
  }
  if (count <= 0) {
    return 0;
  }
  int numSkipped=0;
  if (pos < buf.length) {
    numSkipped+=(count < buf.length - pos) ? count : buf.length - pos;
    pos+=numSkipped;
  }
  if (numSkipped < count) {
    numSkipped+=in.skip(count - numSkipped);
  }
  return numSkipped;
}
