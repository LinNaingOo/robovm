{
  int index=offset;
  int lastIndex=index + maxLength;
  String result;
  while (index < lastIndex && (buffer[index] != 0)) {
    index++;
  }
  try {
    result=new String(buffer,offset,index - offset,"ISO8859_1");
  }
 catch (  UnsupportedEncodingException e) {
    throw new RuntimeException(e.toString());
  }
  return result;
}
