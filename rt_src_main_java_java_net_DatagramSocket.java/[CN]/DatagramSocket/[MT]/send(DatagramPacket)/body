{
  checkClosedAndBind(true);
  InetAddress packAddr=pack.getAddress();
  if (address != null) {
    if (packAddr != null) {
      if (!address.equals(packAddr) || port != pack.getPort()) {
        throw new IllegalArgumentException(Messages.getString("luni.58"));
      }
    }
 else {
      pack.setAddress(address);
      pack.setPort(port);
    }
  }
 else {
    if (packAddr == null) {
      throw new NullPointerException(Messages.getString("luni.59"));
    }
    SecurityManager security=System.getSecurityManager();
    if (security != null) {
      if (packAddr.isMulticastAddress()) {
        security.checkMulticast(packAddr);
      }
 else {
        security.checkConnect(packAddr.getHostName(),pack.getPort());
      }
    }
  }
  impl.send(pack);
}
