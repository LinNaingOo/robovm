{
  if (isClosed()) {
    return null;
  }
  if (!isBound()) {
    return InetAddress.ANY;
  }
  InetAddress anAddr=impl.getLocalAddress();
  try {
    SecurityManager security=System.getSecurityManager();
    if (security != null) {
      security.checkConnect(anAddr.getHostName(),-1);
    }
  }
 catch (  SecurityException e) {
    return InetAddress.ANY;
  }
  return anAddr;
}
