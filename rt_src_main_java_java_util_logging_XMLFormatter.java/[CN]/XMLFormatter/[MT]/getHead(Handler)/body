{
  String encoding=null;
  if (null != h) {
    encoding=h.getEncoding();
  }
  if (null == encoding) {
    encoding=getSystemProperty("file.encoding");
  }
  StringBuilder sb=new StringBuilder();
  sb.append("<?xml version=\"1.0\" encoding=\"").append(encoding).append("\" standalone=\"no\"?>").append(lineSeperator);
  sb.append("<!DOCTYPE log SYSTEM \"logger.dtd\">").append(lineSeperator);
  sb.append("<log>").append(lineSeperator);
  return sb.toString();
}
