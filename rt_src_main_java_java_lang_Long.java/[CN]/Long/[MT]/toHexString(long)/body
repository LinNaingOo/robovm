{
  int count=1;
  long j=l;
  if (l < 0) {
    count=16;
  }
 else {
    while ((j>>=4) != 0) {
      count++;
    }
  }
  char[] buffer=new char[count];
  do {
    int t=(int)(l & 15);
    if (t > 9) {
      t=t - 10 + 'a';
    }
 else {
      t+='0';
    }
    buffer[--count]=(char)t;
    l>>=4;
  }
 while (count > 0);
  return new String(0,buffer.length,buffer);
}
