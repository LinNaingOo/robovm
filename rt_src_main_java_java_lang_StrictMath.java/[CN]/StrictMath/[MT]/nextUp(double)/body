{
  if (Double.isNaN(d)) {
    return Double.NaN;
  }
  if ((d == Double.POSITIVE_INFINITY)) {
    return Double.POSITIVE_INFINITY;
  }
  if (0 == d) {
    return Double.MIN_VALUE;
  }
 else   if (0 < d) {
    return Double.longBitsToDouble(Double.doubleToLongBits(d) + 1);
  }
 else {
    return Double.longBitsToDouble(Double.doubleToLongBits(d) - 1);
  }
}
