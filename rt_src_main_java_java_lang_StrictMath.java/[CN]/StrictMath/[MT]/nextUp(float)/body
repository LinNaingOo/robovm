{
  if (Float.isNaN(f)) {
    return Float.NaN;
  }
  if ((f == Float.POSITIVE_INFINITY)) {
    return Float.POSITIVE_INFINITY;
  }
  if (0 == f) {
    return Float.MIN_VALUE;
  }
 else   if (0 < f) {
    return Float.intBitsToFloat(Float.floatToIntBits(f) + 1);
  }
 else {
    return Float.intBitsToFloat(Float.floatToIntBits(f) - 1);
  }
}
