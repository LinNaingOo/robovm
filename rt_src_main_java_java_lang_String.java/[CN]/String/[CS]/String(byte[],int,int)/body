{
  if (start >= 0 && 0 <= length && length <= data.length - start) {
    offset=0;
    Charset charset=defaultCharset();
    int result;
    CharBuffer cb=charset.decode(ByteBuffer.wrap(data,start,length));
    if ((result=cb.length()) > 0) {
      value=cb.array();
      count=result;
    }
 else {
      count=0;
      value=new char[0];
    }
  }
 else {
    throw new StringIndexOutOfBoundsException();
  }
}
