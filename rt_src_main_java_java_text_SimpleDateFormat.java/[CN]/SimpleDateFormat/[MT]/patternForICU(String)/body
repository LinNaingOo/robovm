{
  String[] subPatterns=p.split("'");
  boolean quote=false;
  boolean first=true;
  StringBuilder result=new StringBuilder();
  for (  String subPattern : subPatterns) {
    if (!quote) {
      result.append((first ? "" : "'") + subPattern.replaceAll("(?<!y)y(?!y)","yy"));
      first=false;
    }
 else {
      result.append("'" + subPattern);
    }
    quote=!quote;
  }
  if (p.endsWith("'")) {
    result.append("'");
  }
  return result.toString();
}
