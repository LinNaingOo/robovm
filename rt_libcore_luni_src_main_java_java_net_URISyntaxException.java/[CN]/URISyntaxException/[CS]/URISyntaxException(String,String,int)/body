{
  super(reason);
  if (input == null) {
    throw new NullPointerException("input == null");
  }
 else   if (reason == null) {
    throw new NullPointerException("reason == null");
  }
  if (index < -1) {
    throw new IllegalArgumentException("Bad index: " + index);
  }
  this.input=input;
  this.index=index;
}
