{
  super(host.equals("") ? "localhost" : host);
  hostName=getHostString(host);
  if (action == null) {
    throw new NullPointerException();
  }
  if (action.equals("")) {
    throw new IllegalArgumentException();
  }
  setActions(action);
  actions=toCanonicalActionString(action);
  parsePort(host,hostName);
}
