{
  if (month < Calendar.JANUARY || month > Calendar.DECEMBER) {
    throw new IllegalArgumentException(Messages.getString("luni.3D",month));
  }
  if (dayOfWeek < Calendar.SUNDAY || dayOfWeek > Calendar.SATURDAY) {
    throw new IllegalArgumentException(Messages.getString("luni.48",dayOfWeek));
  }
  if (time < 0 || time >= 24 * 3600000) {
    throw new IllegalArgumentException(Messages.getString("luni.3E",time));
  }
}
