{
  if (host == null || 0 == host.length()) {
    return InetAddress.LOOPBACK.getHostAddress();
  }
  if (isHostName(host)) {
    if (isCheck) {
      SecurityManager sm=System.getSecurityManager();
      if (sm != null) {
        sm.checkConnect(host,-1);
      }
    }
    return lookupHostByName(host).getHostAddress();
  }
  return host;
}
