{
  try {
    testBuffer.substring(-1,testBuffer.length());
    fail("StringIndexOutOfBoundsException is not thrown.");
  }
 catch (  StringIndexOutOfBoundsException oobe) {
  }
  try {
    testBuffer.substring(0,-1);
    fail("StringIndexOutOfBoundsException is not thrown.");
  }
 catch (  StringIndexOutOfBoundsException oobe) {
  }
  try {
    testBuffer.substring(2,1);
    fail("StringIndexOutOfBoundsException is not thrown.");
  }
 catch (  StringIndexOutOfBoundsException oobe) {
  }
}
