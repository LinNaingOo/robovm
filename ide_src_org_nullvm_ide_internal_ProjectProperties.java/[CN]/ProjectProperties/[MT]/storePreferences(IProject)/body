{
  IEclipsePreferences node=new ProjectScope(project).getNode(NullVMPlugin.PLUGIN_ID);
  if (arch != null) {
    node.put(NullVMPlugin.PREFERENCE_INCREMENTAL_BUILD_ARCH,arch);
  }
 else {
    node.remove(NullVMPlugin.PREFERENCE_INCREMENTAL_BUILD_ARCH);
  }
  if (os != null) {
    node.put(NullVMPlugin.PREFERENCE_INCREMENTAL_BUILD_OS,os);
  }
 else {
    node.remove(NullVMPlugin.PREFERENCE_INCREMENTAL_BUILD_OS);
  }
  node.flush();
}
