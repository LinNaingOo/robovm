{
  byte[] b=new byte[10];
  byte[] ref=testString.getBytes();
  boolean equal=true;
  int bytesRead=0;
  int i;
  assertEquals("Test 1: Incorrect count of bytes read.",is.read(b,0,5),5);
  for (i=0; i < 5; i++) {
    equal&=(b[i] == ref[i]);
  }
  assertTrue("Test 1: Wrong bytes read.",equal);
  assertEquals("Test 2: Incorrect count of bytes read.",is.read(b,5,3),3);
  for (i=5; i < 8; i++) {
    equal&=(b[i] == ref[i]);
  }
  assertTrue("Test 2: Wrong bytes read.",equal);
  b=new byte[ref.length];
  bytesRead=is.read(b,2,b.length - 2);
  assertEquals("Test 3: Incorrect count of bytes read.",bytesRead,ref.length - 8);
  assertEquals("Test 3:",b[0],0);
  assertEquals("Test 3:",b[1],0);
  for (i=0; i < bytesRead; i++) {
    equal&=(b[i + 2] == ref[i + 8]);
  }
  assertTrue("Test 2: Wrong bytes read.",equal);
  assertEquals("Test 4:",is.read(b,0,2),-1);
}
