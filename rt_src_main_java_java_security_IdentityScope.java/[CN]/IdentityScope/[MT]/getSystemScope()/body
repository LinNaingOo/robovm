{
  if (systemScope == null) {
    String className=AccessController.doPrivileged(new PrivilegedAction<String>(){
      public String run(){
        return Security.getProperty("system.scope");
      }
    }
);
    if (className != null) {
      try {
        systemScope=(IdentityScope)Class.forName(className).newInstance();
      }
 catch (      Exception e) {
        e.printStackTrace();
      }
    }
  }
  return systemScope;
}
