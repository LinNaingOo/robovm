{
  DatagramChannel channel=DatagramChannel.open();
  channel.configureBlocking(false);
  DatagramSocket socket=channel.socket();
  try {
    socket.send(null);
    fail("should throw IllegalBlockingModeException");
  }
 catch (  IllegalBlockingModeException e) {
  }
  try {
    socket.receive(null);
    fail("should throw IllegalBlockingModeException");
  }
 catch (  IllegalBlockingModeException e) {
  }
}
