{
  checkLevel(SIGNATURES);
  boolean found=false;
  SootField foundField=null;
  Iterator<SootField> fieldIt=getFields().iterator();
  while (fieldIt.hasNext()) {
    SootField field=fieldIt.next();
    if (field.name.equals(name)) {
      if (found)       throw new RuntimeException("ambiguous field: " + name);
 else {
        found=true;
        foundField=field;
      }
    }
  }
  if (found)   return foundField;
 else   throw new RuntimeException("No field " + name + " in class "+ getName());
}
