{
synchronized (lock) {
    if (isClosed()) {
      throw new IOException(Messages.getString("luni.D6"));
    }
    int minSkip=-pos;
    int maxSkip=count - pos;
    if (maxSkip == 0 || ns > maxSkip) {
      ns=maxSkip;
    }
 else     if (ns < minSkip) {
      ns=minSkip;
    }
    pos+=ns;
    return ns;
  }
}
