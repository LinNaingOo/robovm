{
  NumberFormat nf1=NumberFormat.getInstance();
  assertTrue("grouping is not used for NumberFormat.getInstance",nf1.isGroupingUsed());
  nf1.setGroupingUsed(false);
  assertFalse("grouping is used for NumberFormat.getInstance after setting false",nf1.isGroupingUsed());
  nf1.setGroupingUsed(true);
  assertTrue("grouping is not used for NumberFormat.getInstance after setting true",nf1.isGroupingUsed());
}
