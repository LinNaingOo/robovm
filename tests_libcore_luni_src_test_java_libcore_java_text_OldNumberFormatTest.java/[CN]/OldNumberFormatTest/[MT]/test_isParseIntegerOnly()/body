{
  NumberFormat nf1=NumberFormat.getInstance();
  assertTrue("ParseIntegerOnly is not used for NumberFormat.getInstance",nf1.isGroupingUsed());
  nf1.setParseIntegerOnly(false);
  assertFalse("ParseIntegerOnly is used for NumberFormat.getInstance after setting false",nf1.isParseIntegerOnly());
  nf1.setParseIntegerOnly(true);
  assertTrue("ParseIntegerOnly is not used for NumberFormat.getInstance after setting true",nf1.isParseIntegerOnly());
}
