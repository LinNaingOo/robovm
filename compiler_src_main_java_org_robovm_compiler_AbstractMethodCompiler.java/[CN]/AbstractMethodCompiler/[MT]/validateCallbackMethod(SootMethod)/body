{
  if (!method.isStatic()) {
    throw new IllegalArgumentException("@Callback annotated method " + method.getName() + " must be static");
  }
  if (!canMarshal(method)) {
    throw new IllegalArgumentException("No @Marshaler for return type of" + " @Callback annotated method " + method.getName() + " found");
  }
  for (int i=0; i < method.getParameterCount(); i++) {
    if (!canMarshal(method,i)) {
      throw new IllegalArgumentException("No @Marshaler for parameter " + (i + 1) + " of @Callback annotated method "+ method.getName()+ " found");
    }
  }
}
